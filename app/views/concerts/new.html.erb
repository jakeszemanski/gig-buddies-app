<h1>Add a concert</h1>

<%= form_tag '/concerts', method: :post do %>
  <div class="form-group">
  <%= label_tag :venue_name, 'Enter concert venue: ' %>
  <%= text_field_tag :venue_name, @concert.venue.name, class: 'form-control' %>
  </div>
   <div class="form-group">
  <%= label_tag :doors, 'Enter doors time' %>
  <%= text_field_tag :doors, @concert.doors, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= label_tag :show, 'Enter show time: ' %>
  <%= text_field_tag :show, @concert.show, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= label_tag :date, 'Enter concert date: ' %>
  <%= text_field_tag :date, @concert.date, class: 'form-control' %>
  </div>
  <div>
  <%= submit_tag 'Submit product!' %>
  </div>
  <% end %>