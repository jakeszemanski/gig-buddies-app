<h1>Sell a ticket!</h1>

<%= form_tag '/tickets', method: :post do %>
  <div>
    <%= label_tag :concert %>
    <%= select_tag :concert, options_for_select(@concerts.collect{ |u| [u.date  , u.id] }) , multiple: false, include_blank: true %>
  </div>

   <div class="form-group">
  <%= label_tag :compensation, 'Enter desired compensation' %>
  <%= text_field_tag :compensation, '', class: 'form-control' %>
  </div>

  <div>
  <%= submit_tag 'Submit band!' %>
  </div>
  <% end %>