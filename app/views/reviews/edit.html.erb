<h1>Add a review</h1>

<%= form_tag '/review', method: :patch do %>
  <div class="form-group">
  <%= label_tag :rating, 'Enter a rating (1-10): ' %>
  <%= text_field_tag :rating, @review.rating, class: 'form-control' %>
  </div>
   <div class="form-group">
  <%= label_tag :description, 'Enter  a description' %>
  <%= text_field_tag :description, @review.description, class: 'form-control' %>
  </div>
  
  <div>
  <%= submit_tag 'Submit review!' %>
  </div>
  <% end %>